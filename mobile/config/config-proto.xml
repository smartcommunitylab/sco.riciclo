  </platform>
  <icon src="*resource_folder*/resources/android/icon/drawable-xhdpi-icon.png"/>
  <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
  <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
  <plugin name="cordova-plugin-device" spec="2.0.2" />
  <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
  <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
  <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.3" />
  <plugin name="cordova-plugin-camera" spec="4.0.3" />  
  <plugin name="cordova-plugin-file" spec="4.2.0" />
  <plugin name="cordova-plugin-geolocation" spec="2.4.3" />
  <plugin name="cordova-plugin-inappbrowser" spec="1.4.0" />
  <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
  <plugin name="cordova-plugin-x-socialsharing" spec="~5.4.0" />
  <plugin name="cordova-plugin-app-name" spec="^1.0.7">
        <variable name="APP_NAME" value="*app_name*" />
  </plugin>


</widget>
